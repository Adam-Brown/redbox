{
    "harvester": {
        "type": "workflow-harvester",
        "workflow-harvester": {
            "force-storage": "true"
        }
    },

    "transformer": {
        "harvestQueue": [],
        "renderQueue": []
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "dataset-rules.py"
        },
        "params": {
            "repository.name": "Dataset",
            "repository.type": "Dataset"
        }
    },

    "stages": [
        {
            "name": "pending",
            "label": "Pending",
            "security": ["metadata", "editor", "admin"],
            "visibility": ["metadata", "editor", "admin"],
            "template": "workflows/dataset"
        },
        {
            "name": "live",
            "label": "Live",
            "security": ["editor", "admin"],
            "visibility": ["guest"],
            "template": "workflows/dataset"
        }
    ]
}
