<style type="text/css">
dl {
    font-size: 1.10em;
}
dt {
    border-bottom: 1px solid #CCC;
    font-weight: bold;
}
dd {
    padding-bottom: 1em;
}
</style>

#macro(showField $name $key)
    <dt>$name</dt>
    #set($value = $self.metadata.get($key))
    <dd>
        #if("$value" != "")
            #if($value.startsWith("http:") ||
                $value.startsWith("https://") ||
                $value.startsWith("mailto:"))
                <a href="$value">$value</a>
            #else
                $value
            #end
        #else
            <em>(not specified)</em>
        #end
    </dd>
#end

#macro(showDateRange $name $fromKey $toKey)
    <dt>$name</dt>
    #set($from = $self.metadata.get($fromKey))
    #set($to = $self.metadata.get($toKey))
    <dd>
        #if("$from" != "" && "$to" != "")
            &lt;$from&gt;
            #if("$to" != "")
                to &lt;$to&gt;
            #end
        #elseif("$from" == "" && "$to" != "")
            until &lt;$to&gt;
        #else
            <em>(not specified)</em>
        #end
    </dd>
#end

