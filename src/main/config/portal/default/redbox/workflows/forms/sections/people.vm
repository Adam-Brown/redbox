    </table>

    #fieldTitle("collaborators" "Collaborators" false)
    <div class="help-content" id="help-collaborators">
        Names of other collaborators in the research project, if applicable,
        eg. CSIRO, University of X, Prof. Jim Bloggs, etc.
    </div>
    #inputList("collaborators" "eg. CSIRO, University of X, Prof. Jim Bloggs, etc." "Add collaborator")
</div>
<script type="text/javascript">
function lookupDone(target,data){
    var p=target.parent();
    target.text(" | change");
    p.find(".identified-as-name").text(p.find("input.nl").val());

    // fill in the fields
    var lookupData=data["result-metadata"].all;
    var baseId=p.find("input[id$=\\.dc\\:title]").attr("id").replace(".dc:title", "");
    $("input[id='"+baseId+".foaf:givenName']").val(lookupData["Given Name"]);
    $("input[id='"+baseId+".foaf:familyName']").val(lookupData["Family Name"]);
    $("input[id='"+baseId+".association']").parents("td").find("option").each(function(c,e){
        var option=$(e);
        if(jQuery.trim(option.text())==lookupData["Division"]){
            $("input[id='"+baseId+".association']")
                .val(option.val()).trigger("onDataChanged");
            $("input[id='"+baseId+".association.skos:prefLabel']")
                .val(option.text()).trigger("onDataChanged");
            return;
        }
    });
}

function lookupCleared(target,data){
    var p=target.parent();
    target.text("lookup");
    p.find(".identified-as-name").text("");
    p.find("input.nl").val("");
}

function pcLookupDone(target,data){
    lookupDone(target,data);
    $("#primaryContact\\.foaf\\:email").val(data["result-metadata"].all["Email"]);
}

function pcLookupCleared(target,data){
    lookupCleared(target,data);
    $("#primaryContact\\.foaf\\:email").val("");
}
</script>
