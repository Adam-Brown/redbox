#sectionHeading("People")
<div class="meta">
    <dl>
        #######################################
        <dt>Creators</dt>
        #set($creatorList = $self.getList("dc:creator.foaf:Person"))
        #if ($creatorList.isEmpty())
        <dd>
        #noInformation()
        </dd>
        #else
        <dd>
            <ol>
            #foreach($key in $creatorList.keySet())
                #set($dcCreator = $creatorList.get($key))
                #set($firstName = $dcCreator.get("foaf:givenName"))
                #set($familyName = $dcCreator.get("foaf:familyName"))
                #set($dcCreatorAssociation = $dcCreator.get("association.skos:prefLabel"))
                <li>
                    $firstName $familyName#if("$!dcCreatorAssociation" != ""), $self.escapeHtml($dcCreatorAssociation)#end
                    #if($dcCreator.get("ci"))[CI]#end
                    #if($dcCreator.get("pi"))[PI]#end
                </li>
            #end
            </ol>
        </dd>
        #end

        #######################################
        <dt>Primary Contact</dt>
            #set($firstName = $self.getFirst("primaryContact.foaf:givenName"))
            #set($familyName = $self.getFirst("primaryContact.foaf:familyName"))
            #set($foafEmail = $self.getFirst("primaryContact.foaf:email"))
            #if ("$!firstName" != "")
        <dd>
            $self.escapeHtml($firstName) $self.escapeHtml($familyName)#if("$!foafEmail"!=""), $self.escapeHtml($foafEmail)#end
        </dd>
            #else
        <dd>
            #noInformation()
        </dd>
        #end

        #######################################
        <dt>Supervisors</dt>
        #set($supervisorList = $self.getList("supervisor"))
        #if ($supervisorList.isEmpty())
        <dd>
        #noInformation()
        </dd>
        #else
        <dd>
            <ol>
            #foreach($key in $supervisorList.keySet())
                #set($supervisor = $supervisorList.get($key))
                <li>
                    #displayRequiredKey($supervisor "foaf:givenName")
                    #displayRequiredKey($supervisor "foaf:familyName")
                </li>
            #end
            </ol>
        </dd>
        #end
        #displayList("collaborators" "Collaborators")
    </dl>
</div>
