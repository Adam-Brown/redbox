<!--Note: I'm going to remove this script call to our header as I think it's 
handy all over the place to handle the multitude of json models we get via ajax around the place-->
<script type='text/javascript' src='http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js'></script>
<div id="$tableName">
<table>
    <thead>
    	<tr>
        <th>File name</th>
        <th>Description</th>
        <th>Actions</th>
        </tr>
        
    </thead>
    <tbody data-bind="foreach: rows">
        <tr>
        	<td data-bind="text: filename"/>
        	<td data-bind="text: description"/>	
            <td><a href="#" data-bind="click: $parent.remove">Remove</a> </td>
        </tr>
    </tbody>
</table>
</div>

<script>
startupCompleteListeners.push("initialiseFileUploadTable");

function initialiseFileUploadTable() {
	var rows = $initialiseFunctionName(); 
	//put all the row models in the row array
	for(var i =0; i<rows.length; i++) {
		${modelName}.rows.push(rows[i]);
	}
}

function $modelName() {
    var self = this;
 
    self.rows = ko.observableArray([  	
    ]);

    self.remove = function() {
        $removeFunction(this, self.removeFunc(this));        
    };
    
    self.removeFunc = function(row) { return function() {
      self.rows.remove(row);  
    }};
}

function add${modelName}Row(model) {
    ${modelName}.rows.push(model);    
}
   
var $modelName = new $modelName();
ko.applyBindings($modelName, $("[id='$tableName']")[0]);
</script>