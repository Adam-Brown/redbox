#macro(sectionHeading $heading)
<span class="accordion-header">$heading</span>
#end
#macro(noInformation)
<i>Not provided</i>
#end
#macro(display $key $name)
    <dt>$name</dt>
    #set($v = $metadata.get("$key"))
    <dd>
    #if ($v)
		$v
    #else
		#noInformation()
    </dd>
    #end
#end

<script>
function manage_access(e) {
	$("#dialog-form").dialog("open");
}
</script>
<div>
    #set($oid = $metadata.get("id"))
    #parseDisplayTemplate("detail/preview/sections/overview.vm")

    <div style="text-align:center">
    <a target="_blank" href="$portalPath/download/$oid/Data%20Management%20Plan.pdf">Download a PDF of this plan
    <img alt="Get PDF" src="$portalPath/images/icons/mimetype/application/pdf/icon.png" height="20" width="20" >
    </a>
    #set($pdfs = $self.getPlanVersions())
    #if ($pdfs.size() > 0)
        <br><a href="#" onclick="$('#plan-versions').toggle(); return false;">Previous versions</a>
    <div id="plan-versions" style="display:none">
    <ol>
	#foreach($item in $pdfs.descendingKeySet())
		<li><a target="_blank" href="$portalPath/download/$oid/$pdfs.get($item)">$item
	    <img alt="Get PDF" src="$portalPath/images/icons/mimetype/application/pdf/icon.png" height="20" width="20" >
	    </a>
	    </li>
	#end
    </ol>
	<div>
	#end
    </div>
    <table>
    <tr><td><a href="$portalPath/workflow/$oid?flow=dataStructure">Data structure, collection and analysis</a></td><td>#if($self.getObjectMetaProperty("dataStructureComplete") == true)Completed #else Not completed #end</td></tr>
    <tr><td><a href="$portalPath/workflow/$oid?flow=dataAccess">Licensing and access</a></td><td>#if($self.getObjectMetaProperty("dataAccessComplete") == true)Completed #else Not completed #end</td></tr>
    <tr><td><a href="$portalPath/workflow/$oid?flow=dataRetention">Retention and disposal</a></td><td>#if($self.getObjectMetaProperty("dataRetentionComplete") == true)Completed #else Not completed #end</td></tr>
    </table>
    <p>You can add information to your plan to assist us in working with you to manage your research data.</p>
</div>

<div id="toggle-accordion" class="toggle-accordion">
    <span id="toggle-accordion-icon" class="ui-icon ui-icon-triangle-1-e"></span>
    <span id="toggle-accordion-text">Show all sections</span>
</div>
<div class="accordion">
    #parseDisplayTemplate("detail/preview/sections/people.vm")
    #parseDisplayTemplate("detail/preview/sections/data-storage.vm")
    #parseDisplayTemplate("detail/preview/sections/ethics-sensitivities.vm")
    #parseDisplayTemplate("detail/preview/sections/ethics-licensing-IP.vm")
    #parseDisplayTemplate("detail/preview/sections/data-strucure.vm")
    #parseDisplayTemplate("detail/preview/sections/licensing-access.vm")
    #parseDisplayTemplate("detail/preview/sections/retention-disposal.vm")
</div>

<script type="text/javascript">
$(function(){
    function addAccordion() {
        $(".accordion").accordion({
            autoHeight:false,
            clearStyle:true,
            collapsible:false,
            header:".accordion-header"
        });
    }
    $("#toggle-accordion").click(function(){
        if ($(".ui-accordion").length > 0) {
            $(".accordion").fadeOut(function(){
                $(this).accordion("destroy");
                $(".accordion-header").each(function() {
                    $(this).addClass("accordion-reset");
                });
                $(this).fadeIn();
            });
            $("#toggle-accordion-text").text("Show sections individually");
        } else {
            $(".accordion").fadeOut(function(){
                addAccordion();
                $(".accordion-header").each(function() {
                    $(this).removeClass("accordion-reset");
                });
                $(this).fadeIn();
            });
            $("#toggle-accordion-text").text("Show all sections");
        }
        $("#toggle-accordion-icon").toggleClass("ui-icon-triangle-1-e ui-icon-triangle-1-s");
        return false;
    });
    addAccordion();
});
</script>
