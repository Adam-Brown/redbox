#set($menuTitle = "My plans")
#parseTemplate("wrapping/info-box-open.vm")
<div class="block">
#if ($self.myPlans && $self.myPlans.size() > 0)
    <table>
        <thead>
            <tr>
                <th>Project</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
        #foreach($item in $self.myPlans)
            #set($oid = $item.get("id"))
          <tr>
        		#set($title = $item.get('dc:title'))
        		<td><a href="$portalPath/detail/$oid">#if ($title) $title #else [Untitled] #end</a></td>
                <td>
                #parseTemplate("home/dmpt/created_modified_date.vm")                
                </td>
                <td>$self.formatDate($item.get("last_modified"))</td>
                <td><a href="$portalPath/workflow/$oid" title="Edit Plan"><img alt="Edit" src="$portalPath/images/icons/workflow_edit.png"></a>
                <a target="_blank" href="$portalPath/download/$oid/Data%20Management%20Plan.pdf" title="Download PDF"><img alt="Get PDF" src="$portalPath/images/icons/mimetype/application/pdf/icon.png"></a>
                <a href="#" onclick="manage_access('$oid');" title="Set Permissions"><img alt="Manage record" src="$portalPath/images/icons/application_key.png"></a>
                </td>
            </tr>
        #end
        </tbody>
    </table>
#end
</div>    
#parseTemplate("wrapping/info-box-close.vm")

#if ($self.sharedPlans && $self.sharedPlans.size() > 0)
#set($menuTitle = "Plans shared with me")
#parseTemplate("wrapping/info-box-open.vm")
<div class="block">
    <table>
        <thead>
            <tr>
                <th>Project</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Plan</th>
            </tr>
        </thead>
        <tbody>
        #foreach($item in $self.sharedPlans)
            #set($oid = $item.get("id"))
          <tr>
        		#set($title = $item.get('dc:title'))
                <td><a href="$portalPath/detail/$oid">#if ($title) $title #else [Untitled] #end</a></td>
                <td>
                #parseTemplate("home/dmpt/created_modified_date.vm")                
                </td>
                <td>$self.formatDate($item.get("last_modified"))</td>
                <td>
                <a target="_blank href="$portalPath/download/$oid/Data%20Management%20Plan.pdf" title="Download PDF"><img alt="Get PDF" src="$portalPath/images/icons/mimetype/application/pdf/icon.png"></a>
                </td>
            </tr>
        #end
        </tbody>
    </table>
</div>
#parseTemplate("wrapping/info-box-close.vm")
#end
